alias reload='source ~/.bash_profile'

alias mh='cd ~/MeadHall'
alias rp='cd ~/rails_projects'

alias be="bundle exec"
alias u='rake u'

alias pgstart='pg_ctl -D /usr/local/var/postgres -l logfile start'
alias pgstop='pg_ctl -D /usr/local/var/postgres stop'

alias ..='cd ..'
alias ...='cd ../..'
alias -- -='cd -'







# Rails
alias reset='echo dropping db && rake db:drop && echo creating db && rake db:create && echo migrating db  && rake db:migrate && echo seeding db && rake db:seed'

alias rgm='rails generate model'
alias rn='rails new'
alias rs='rails s'

rails-help () {
  echo "Rails Aliases"
  echo
  echo "reset  = rake db:reset"
  echo
  echo "rgm = rails generate model"
  echo "rn = rails new"
  echo "rs  = rails s"
  echo
}

