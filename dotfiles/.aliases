alias reload='source ~/.bash_profile'

alias mh='cd ~/MeadHall'
alias rp='cd ~/rails_projects'

alias be="bundle exec"
alias u='rake u'

alias pgstart='pg_ctl -D /usr/local/var/postgres -l logfile start'
alias pgstop='pg_ctl -D /usr/local/var/postgres stop'

alias ..='cd ..'
alias ...='cd ../..'
alias -- -='cd -'


# Git Aliases
alias g='git'
alias gi='git init'
alias gs='git status'
alias gss='git status -s'
alias ga='git add .'
alias gap='git add --all -p'
alias gc='git commit -m'
alias gl='git lga'
alias gd='git diff'
alias gdc='git diff --cached'
alias gp='git push'
alias gr='git pull --rebase'
alias gv='git remote -v'
alias gb='git branch'

# Rails
alias reset='echo dropping db && rake db:drop && echo creating db && rake db:create && echo migrating db  && rake db:migrate && echo seeding db && rake db:seed'

alias rgm='rails generate model'
alias rn='rails new'
alias rs='rails s'

rails-help () {
  echo "Rails Alias Usage"
  echo
  echo "reset  = rake db:reset"
  echo
  echo "rgm = rails generate model"
  echo "rn = rails new"
  echo "rs  = rails s"
  echo
}

